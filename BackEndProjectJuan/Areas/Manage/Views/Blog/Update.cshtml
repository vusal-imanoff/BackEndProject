@model Blog
@{
    ViewData["Title"] = "Update";
}


<div class="row justify-content-lg-between">
    <div class="col-lg-2">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Update</h1>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span class="text text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainDescription"></label>
                <textarea asp-for="MainDescription" class="form-control" rows="3"></textarea>
                <span class="text text-danger" asp-validation-for="MainDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubDescription"></label>
                <textarea asp-for="SubDescription" class="form-control" rows="3"></textarea>
                <span class="text text-danger" asp-validation-for="SubDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blacknote"></label>
                <textarea asp-for="Blacknote" class="form-control" rows="3"></textarea>
                <span class="text text-danger" asp-validation-for="Blacknote"></span>
            </div>
            <div class="custom-file mb-3">
                <input asp-for="File" class="custom-file-input" required>
                <label for="File" class="custom-file-label">Choose Blog Image...</label>
                <span class="text text-danger" asp-validation-for="File"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-area="manage" asp-controller="blog" asp-action="index" class="btn btn-primary">Go Back</a>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationScriptsPartial">
}
