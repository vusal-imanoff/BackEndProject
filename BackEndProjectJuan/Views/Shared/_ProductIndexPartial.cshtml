@model List<Product>

@foreach (Product product in Model)
{

    <div class="col-lg-4 col-sm-6">
        <!-- product grid item start -->
        <div class="product-item mb-53">
            <div class="product-thumb">
                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                    <img src="assets/img/product/@product.Image" alt="">
                </a>
            </div>
            <div class="product-content">
                <h5 class="product-name">
                    <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">@product.Name</a>
                </h5>
                @if (product.DiscountPrice>0)
                {
                    <div class="price-box">
                        <span class="price-regular">$@product.DiscountPrice</span>
                        <span class="price-old"><del>$@product.Price</del></span>
                    </div>
                }
                else
                {
            <div class="price-box">
                <span class="price-regular">$@product.Price</span>
            </div>
                }
                <div class="product-action-link">
                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a asp-controller="basket" asp-action="addtobasket"  asp-route-id="@product.Id" class="addbasket" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                    <a asp-controller="product" asp-action="ProductModal" asp-route-id="@product.Id" class="productModal" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip"
                              title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>
