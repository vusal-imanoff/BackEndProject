@model List<BasketVM>
@{
    ViewData["Title"] = "Index";
    double totalprice = Model.Sum(s => s.Price * s.Count);
    double totalextac = Model.Sum(s => s.Extax * s.Count);
    double totalvat = totalprice * 0.2;
}
}

<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Cart</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="basket" asp-action="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Cart</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- cart main wrapper start -->
<div class="cart-main-wrapper section-padding">
    <div class="container">
        <div class="section-bg-color">
            <div class="row basketcontainer">
                @await Html.PartialAsync("_BasketIndexPartial", Model)
            </div>
        </div>
    </div>
</div>
<!-- cart main wrapper end -->