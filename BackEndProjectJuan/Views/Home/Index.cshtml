@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}


<!-- hero slider section start -->
<section class="hero-slider">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                    @foreach (Slider slider in ViewBag.Sliders)
                    {
                        <!-- single slider item start -->
                        <div class="hero-single-slide">
                            <div class="hero-slider-item bg-img" data-bg="assets/img/slider/@slider.Image">
                                <div class="hero-slider-content slide-1">
                                    <h5 class="slide-subtitle">@slider.MainTitle</h5>
                                    <h2 class="slide-title">@slider.SubTitle</h2>
                                    <p class="slide-desc">@slider.Description</p>
                                    <a href="@slider.RedirectUrl" class="btn btn-hero">SHOP NOW</a>
                                </div>
                            </div>
                        </div>
                        <!-- single slider item end -->

                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- hero slider section end -->
<!-- service features start -->
<section class="service-policy-area">
    <div class="container">
        <div class="row">
            <!-- single policy item start -->
            <div class="col-lg-4">
                <div class="service-policy-item mt-30 bg-1">
                    <div class="policy-icon">
                        <img src="~/assets/img/icon/policy-1.png" alt="policy icon">
                    </div>
                    <div class="policy-content">
                        <h5 class="policy-title">FREE SHIPPING</h5>
                        <p class="policy-desc">Free shipping on all order</p>
                    </div>
                </div>
            </div>
            <!-- single policy item start -->
            <!-- single policy item start -->
            <div class="col-lg-4">
                <div class="service-policy-item mt-30 bg-2">
                    <div class="policy-icon">
                        <img src="~/assets/img/icon/policy-2.png" alt="policy icon">
                    </div>
                    <div class="policy-content">
                        <h5 class="policy-title">ONLINE SUPPORT</h5>
                        <p class="policy-desc">Online support 24 hours a day</p>
                    </div>
                </div>
            </div>
            <!-- single policy item start -->
            <!-- single policy item start -->
            <div class="col-lg-4">
                <div class="service-policy-item mt-30 bg-3">
                    <div class="policy-icon">
                        <img src="~/assets/img/icon/policy-3.png" alt="policy icon">
                    </div>
                    <div class="policy-content">
                        <h5 class="policy-title">MONEY RETURN</h5>
                        <p class="policy-desc">Back guarantee under 5 days</p>
                    </div>
                </div>
            </div>
            <!-- single policy item start -->
        </div>
    </div>
</section>
<!-- service features end -->
<!-- our product area start -->
<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    @foreach (var product in Model)
                    {
                        <!-- product single item start -->
                        <div class="product-item mb-50">
                            <div class="product-thumb">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                                    <img src="~/assets/img/product/@product.Image" alt="">
                                </a>
                            </div>
                            <div class="product-content">
                                <h5 class="product-name">
                                    <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">@product.Name</a>
                                </h5>
                                @{ if (product.DiscountPrice > 0)
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@product.DiscountPrice.ToString("F2")</span>
                                            <span class="price-old"><del>$@product.Price.ToString("F2")</del></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@product.Price.ToString("F2")</span>
                                        </div>
                                    }

                                }
                                <div class="product-action-link">
                                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                    <a asp-controller="basket" asp-action="addtobasket" asp-route-id="@product.Id" class="addbasket" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag addbaskety"></i></a>
                                    <a asp-controller="product" asp-action="ProductModal" asp-route-id="@product.Id" class="productModal" data-toggle="modal" data-target="#quick_view">
                                        <span data-toggle="tooltip"
                                              title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- product single item start -->
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->
<!-- banner statistic area start -->
