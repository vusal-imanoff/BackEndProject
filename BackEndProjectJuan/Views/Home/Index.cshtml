    <div class="container">
        <div class="row no-gutters mtn-30">
            <div class="col-md-6">
                <div class="img-container mt-30">
                    <a href="product-details.html">
                        <img src="~/assets/img/banner/banner-1.jpg" alt="banner-image">
                    </a>
