@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login-Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <!-- Register Content Start -->
        <div class="login-reg-form-wrap signup-form">
            <h2>Singup Form</h2>
            <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
            <form action="#" method="post">
                <div class="single-input-item">
                    <input asp-for="Name" placeholder="Name" required />
                    <span class="text text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="single-input-item">
                    <input asp-for="Surname" placeholder="SurName" required />
                    <span class="text text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="single-input-item">
                    <input asp-for="FatherName" placeholder="Father Name" required />
                    <span class="text text-danger" asp-validation-for="FatherName"></span>
                </div>
                <div class="single-input-item">
                    <input asp-for="Age" placeholder="Age" required />
                    <span class="text text-danger" asp-validation-for="Age"></span>
                </div>
                <div class="single-input-item">
                    <input asp-for="Email" placeholder="Enter your Email" required />
                    <span class="text text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="single-input-item">
                    <input asp-for="UserName" placeholder="Enter your Username" required />
                    <span class="text text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <input asp-for="Password" placeholder="Enter your Password" required />
                            <span class="text text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <input asp-for="ConfirmPassword" placeholder="Repeat your Password" required />
                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                </div>
                <div class="single-input-item">
                    <div class="login-reg-form-meta">
                        <div class="remember-meta">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="subnewsletter">
                                <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="single-input-item">
                    <button type="submit" class="btn">Register</button>
                </div>
            </form>
        </div>
        <!-- Register Content End -->
    </div>
</div>
<!-- login register wrapper end -->

@section Script{

    <partial name="_ValidationScriptsPartial">
}
